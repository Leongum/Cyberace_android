<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/challengeListItem"
android:layout_width="220dp"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="50dp" android:background="@drawable/textfield"
        >
<TextView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:text="男子"
        android:id="@+id/challengeTxtSex" android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" android:gravity="center_vertical|center_horizontal" android:textIsSelectable="false"
        android:textSize="10dp" android:background="@drawable/contactus_bg" android:textColor="#000000"
        android:layout_alignParentTop="true" android:layout_marginTop="12dp" android:layout_marginLeft="15dp"/>
<TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="800 m"
        android:id="@+id/challenegTxtName" android:layout_toRightOf="@+id/challengeTxtSex"
        android:gravity="center_vertical"
        android:textSize="22dp" android:textStyle="bold"
        android:textColor="#000000" android:layout_marginTop="6dp" android:layout_marginLeft="15dp"
        android:paddingLeft="10dp"/>
<TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="*"
        android:id="@+id/challengeTxtLevel" android:layout_toRightOf="@+id/challenegTxtName"
        android:textColor="#ff0f0f" android:gravity="center_vertical|center_horizontal"
        android:textSize="22dp" android:textStyle="bold"
        android:layout_marginTop="6dp"/>
</RelativeLayout>