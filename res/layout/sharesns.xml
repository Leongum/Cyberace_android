<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/paper_bg">
    <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/sharesnsBtnReturn" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_marginTop="6dp" android:layout_marginLeft="10dp" android:background="@drawable/back_bg"/>
    <Button android:layout_width="55dp" android:layout_height="55dp" android:id="@+id/sharesnsBtnSubmit"
            android:background="@drawable/submit" android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" android:layout_marginTop="6dp" android:layout_marginRight="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="炫耀贴"
            android:id="@+id/sharesnsTxtTitle" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="100dp" android:textColor="#000000" android:textStyle="bold"
            android:textSize="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对这次运动说点啥吧"
            android:id="@+id/sharesnsTxtSubTitle" android:layout_alignParentLeft="true" android:layout_below="@+id/sharesnsTxtTitle"
            android:layout_marginLeft="35dp" android:textColor="#5c5c5c" android:layout_marginTop="15dp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/sharesnsTxtContent" android:layout_alignLeft="@+id/sharesnsTxtSubTitle" android:layout_below="@+id/sharesnsTxtSubTitle"
            android:paddingLeft="10dp" android:paddingTop="15dp"
            android:background="@drawable/contactus_bg" android:inputType="text|textMultiLine" android:gravity="top"
            android:textSize="12dp" android:hint="运动感想～～～～" android:maxWidth="230dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="炫耀到："
            android:id="@+id/sharesnsTxtShareTo" android:layout_alignLeft="@+id/sharesnsTxtSubTitle" android:layout_below="@+id/sharesnsTxtContent"
            android:layout_marginTop="5dp" android:textColor="#5c5c5c" android:gravity="fill_vertical"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/sharesnsBtnSina" android:layout_toRightOf="@+id/sharesnsTxtShareTo"
            android:layout_alignTop="@+id/sharesnsTxtShareTo" android:background="@drawable/weibo"
            android:layout_marginLeft="5dp" android:alpha="0.7"/>
    <Button android:layout_width="40dp" android:layout_height="40dp" android:id="@+id/sharesnsBtnTencent"
            android:background="@drawable/tencent_weibo" android:layout_toRightOf="@+id/sharesnsBtnSina"
            android:layout_alignTop="@+id/sharesnsTxtShareTo" android:layout_marginLeft="10dp" android:alpha="0.7"/>
    <Button android:layout_width="40dp" android:layout_height="40dp" android:id="@+id/sharesnsBtnRenren"
            android:background="@drawable/renren"
            android:layout_toRightOf="@+id/sharesnsBtnTencent" android:layout_alignTop="@+id/sharesnsTxtShareTo"
            android:layout_marginLeft="10dp" android:alpha="0.7"/>
    <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/sharesnsBtnWeixin"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp" android:layout_marginLeft="130dp" android:background="@drawable/qq_friend"/>
</RelativeLayout>