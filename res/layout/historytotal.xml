<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        style="@android:style/Theme.NoTitleBar.Fullscreen" android:background="@drawable/paper"
        >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:id="@+id/historytotalLayoutContent" android:clickable="false">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你一共跑了"
                android:id="@+id/historytotalTxtDistanceTitle" android:layout_alignParentLeft="true" android:layout_marginLeft="45dp"
                android:layout_alignParentTop="true" android:layout_marginTop="100dp" android:textColor="#4d4d4d"
                android:textSize="11dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 km"
                android:id="@+id/historytotalTxtDistance"
                android:layout_toRightOf="@+id/historytotalTxtDistanceTitle" android:layout_below="@+id/historytotalTxtDistanceTitle" android:textSize="22dp"
                android:textColor="#000000" android:layout_marginLeft="10dp" android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嘿嘿，小菜鸟~"
                android:id="@+id/historytotalTxtDistanceTip" android:layout_below="@+id/historytotalTxtDistance"
                android:textColor="#4d4d4d" android:textSize="11dp" android:layout_marginTop="5dp"
                android:layout_alignParentRight="true" android:layout_marginRight="50dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="你的平均速度大概是"
                  android:id="@+id/historytotalTxtSpeedTitle"
                  android:textColor="#4d4d4d"
                  android:textSize="11dp" android:layout_alignLeft="@+id/historytotalTxtDistanceTitle" android:layout_below="@+id/historytotalTxtDistanceTip"
                  android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0 km"
                  android:id="@+id/historytotalTxtSpeed"
                  android:textSize="22dp" android:textColor="#000000"
                  android:layout_alignLeft="@+id/historytotalTxtDistance" android:layout_below="@+id/historytotalTxtSpeedTitle"
                  android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="也就普通水平嘛～"
                  android:id="@+id/historytotalTxtSpeedTip"
                  android:textColor="#4d4d4d" android:textSize="11dp"
                  android:layout_below="@+id/historytotalTxtSpeed"
                  android:layout_alignRight="@+id/historytotalTxtDistanceTip" android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="你一共祸害了这些能量"
                  android:id="@+id/historytotalTxtCarTitle" android:textColor="#4d4d4d" android:textSize="11dp"
                  android:layout_alignLeft="@+id/historytotalTxtDistanceTitle" android:layout_below="@+id/historytotalTxtSpeedTip"
                  android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0 km"
                  android:id="@+id/historytotalTxtCar" android:textSize="22dp" android:textColor="#000000"
                  android:layout_alignLeft="@+id/historytotalTxtDistance" android:layout_below="@+id/historytotalTxtCarTitle"
                  android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="目前还看不出变化哦～"
                  android:id="@+id/historytotalTxtCarTip" android:textColor="#4d4d4d" android:textSize="11dp"
                  android:layout_alignRight="@+id/historytotalTxtDistanceTip" android:layout_below="@+id/historytotalTxtCar"
                  android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="40dp" android:text="完成挑战次数"
                  android:id="@+id/historytotalTxtChallengeTitle" android:textColor="#4d4d4d" android:textSize="15dp"
                  android:layout_alignLeft="@+id/historytotalTxtDistanceTitle" android:layout_below="@+id/historytotalTxtCarTip"
                  android:singleLine="false" android:layout_marginTop="30dp" android:textStyle="bold"
                  android:gravity="center_vertical"/>
        <TextView android:layout_width="wrap_content" android:layout_height="40dp" android:text="0 次"
                  android:id="@+id/historytotalTxtChallenge" android:textSize="22dp" android:textColor="#000000"
                  android:layout_toRightOf="@+id/historytotalTxtChallengeTitle"
                  android:layout_alignTop="@+id/historytotalTxtChallengeTitle" android:layout_marginLeft="30dp"
                  android:gravity="center_vertical"/>
    </RelativeLayout>
</RelativeLayout>